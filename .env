# ========================================
# FLASK CAMERA SHOP - ENVIRONMENT VARIABLES
# ========================================

FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production-xyz123abc456
DEBUG=True

# SQLite for development
DATABASE_URL=sqlite:///camera_shop.db

MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@camerashop.com

UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif

ITEMS_PER_PAGE=12

CACHE_TYPE=simple

SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

RATELIMIT_STORAGE_URL=memory://

ADMIN_EMAIL=admin@camerashop.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

APP_NAME=Camera Shop
APP_VERSION=1.0.0
TIMEZONE=Asia/Ho_Chi_Minh
