# ========================================
# FLASK CAMERA SHOP - ENVIRONMENT VARIABLES
# ========================================

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production-please-use-random-string
DEBUG=True

# Database Configuration (MySQL)
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/camera_shop_db

# Database Configuration (PostgreSQL - Alternative)
# DATABASE_URL=postgresql://username:password@localhost:5432/camera_shop_db

# Database Configuration (SQLite - For Development)
# DATABASE_URL=sqlite:///camera_shop.db

# Email Configuration (Gmail Example)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Upload Configuration
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif

# Pagination
ITEMS_PER_PAGE=12

# Cache Configuration (Optional - Redis)
# CACHE_TYPE=redis
# CACHE_REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=simple

# Security
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600  # 1 hour

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://

# Stripe Payment (Optional)
# STRIPE_PUBLIC_KEY=pk_test_xxxxx
# STRIPE_SECRET_KEY=sk_test_xxxxx

# Admin Configuration
ADMIN_EMAIL=admin@camerashop.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123  # Change this!

# Application Settings
APP_NAME=Camera Shop
APP_VERSION=1.0.0
TIMEZONE=Asia/Ho_Chi_Minh
